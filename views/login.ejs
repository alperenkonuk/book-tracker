<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <title>Book Tracker Home</title>
    <meta name="viewport" content="width=device-width,initial-scale=1"/>
    <meta name="description" content=""/>
    <link rel="stylesheet" type="text/css" href="/css/header.css"/>
    <link rel="stylesheet" type="text/css" href="/css/common.css"/>
    <link rel="stylesheet" href="/css/modal.css"/>
    <link rel="stylesheet" href="/css/login.css"/>
    <link rel="icon" href="favicon.png">
</head>
<body>
<% if(locals.error) { %>
    <%- include('partials/errorModal') %>
<% } %>
<%- include('partials/header') %>
<div id="main">
    <div id="main-container">
        <div id="navigator">
            <a onclick="display(1)">
                <div id="login-header"
                     class="header<% if(!locals.selected || locals.selected === "login"){ %> selected<% } %>">
                    <h2>Login</h2>
                </div>
            </a>
            <a onclick="display(2)">
                <div id="register-header"
                     class="header<% if(locals.selected === "register"){ %> selected<% } %>">
                    <h2>Register</h2>
                </div>
            </a>
        </div>
        <div id="login-container" <% if(locals.selected === "register"){ %>hidden<% } %>>
            <form action="/login" method="post">
                <div id="form-container">
                    <div class="form-group">
                        <input class="text-input" id="loginEmail" type="email" name="email" placeholder="Email" required>
                    </div>
                    <div class="form-group password-div">
                        <input class="text-input" type="password" name="password" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <label>
                            <input type="checkbox" name="remember">
                            Remember me
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Log In">
                    </div>
                </div>
            </form>
        </div>
        <div id="register-container" <% if(!locals.selected || locals.selected === "login"){ %> hidden<% } %>>
            <form action="/register" method="post">
                <div id="form-container">
                    <div class="form-group">
                        <input class="text-input" type="email" name="email" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                    <input class="text-input" type="text" name="username" placeholder="Username" required>
                </div>
                    <div class="form-group password-div">
                        <input class="text-input" type="password" name="password" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <input class="text-input" type="password" name="passwordAgain" placeholder="Password Again" required>
                    </div>
                    <div class="form-group">
                        <label>
                            <input type="checkbox" name="publicProfile">
                            Public Profile
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Register">
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div id="oauth-container">

    </div>
</div>
<script src="/script.js"></script>
</body>